<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/shape_frame">

    <ImageView
        android:id="@+id/recommend_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recommend_roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/room_roomName"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend_image" />


    <TextView
        android:id="@+id/recommend_divingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/room_diveType"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <TextView
        android:id="@+id/recommend_divingLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/activity_divingLevel"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_divingType"
        app:layout_constraintStart_toEndOf="@+id/textView89"
        app:layout_constraintTop_toTopOf="@+id/recommend_divingType" />

    <TextView
        android:id="@+id/recommend_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signIn_isExperience"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_divingLevel"
        app:layout_constraintStart_toEndOf="@+id/recommend_divingLevel"
        app:layout_constraintTop_toTopOf="@+id/recommend_divingLevel" />

    <TextView
        android:id="@+id/recommend_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_divingArea"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="@+id/recommend_divingType"
        app:layout_constraintTop_toTopOf="@+id/imageView14" />

    <TextView
        android:id="@+id/recommend_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/activity_divingPlace"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_area"
        app:layout_constraintStart_toEndOf="@+id/textView84"
        app:layout_constraintTop_toTopOf="@+id/recommend_area" />

    <TextView
        android:id="@+id/textView84"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@color/navy_blue"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_area"
        app:layout_constraintStart_toEndOf="@+id/recommend_area"
        app:layout_constraintTop_toTopOf="@+id/recommend_area" />

    <TextView
        android:id="@+id/recommend_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintStart_toStartOf="@+id/recommend_area"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        tools:text="@string/room_time" />

