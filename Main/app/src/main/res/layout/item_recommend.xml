    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@+id/recommend_roomName"
        app:layout_constraintTop_toBottomOf="@+id/recommend_roomName"
        app:srcCompat="@drawable/diving" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/textView89"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:background="@color/gray_light_more"
        app:layout_constraintBottom_toBottomOf="@+id/recommend_divingType"
