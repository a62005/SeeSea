<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_hostRights"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/activity_host_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hostRights_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/userName"
        android:textColor="@color/navy_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:id="@+id/hostRights_userDescribe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="10dp"
        android:inputType="textMultiLine"
        android:text="@string/activity_signupDescribe"
        android:textColor="@color/navy_blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/hostRights_agreeButton"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_login_button"
        android:gravity="center"
        android:text="@string/rights_agree"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:id="@+id/hostRights_leaveButton"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_login_button"
        android:gravity="center"
        android:text="@string/rights_leave"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:id="@+id/singupTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rights_date"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/hostRights_userName"
        app:layout_constraintTop_toBottomOf="@+id/hostRights_userName" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray_light_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostRights_userDescribe" />

    <TextView
        android:id="@+id/sign_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/singupTime"
        app:layout_constraintStart_toEndOf="@+id/singupTime"
        app:layout_constraintTop_toTopOf="@+id/singupTime" />
</androidx.constraintlayout.widget.ConstraintLayout>