<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--陰影-->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="0dp"
        android:bottom="0dp"
        >
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#f5f5f5"
                android:startColor="#ffffff"/>

            <corners android:radius="5dip" />
        </shape>

    </item>
    <!--陰影-->

    <!--白色背景-->
    <item
        android:left="3dp"
        android:top="3dp"
        android:bottom="5dp"
        android:right="3dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"/>

            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/gray_light"/>
        </shape>

    </item>

</layer-list>